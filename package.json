{
  "name": "modi-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "test": "jest --verbose --watch-All --coverage",
    "tsc": "tsc -p tsconfig.build.json --watch",
    "nodemon": "nodemon dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.34",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^25.2.3",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "ignorePatterns": [
      "*.d.ts",
      "dist/*"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "parser": "typescript",
          "bracketSpacing": true,
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "require-jsdoc": "off",
      "valid-jsdoc": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}