{
  "name": "modi-server",
  "version": "1.0.0",
  "description": "The socket connection manager, and game interface for modi-mobile.",
  "main": "./dist/index.js",
  "scripts": {
    "prestart": "npm run build",
    "build": "tsc",
    "start": "node dist/",
    "dev": "nodemon",
    "lint": "eslint --fix --ext .ts ./src/* ./test/*",
    "test": "jest --verbose --coverage --runInBand --forceExit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^13.11.0",
    "@types/socket.io": "^2.1.4",
    "express": "^4.17.1",
    "jest": "^25.2.3",
    "property-watch-decorator": "^1.2.5",
    "redux": "^4.0.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/socket.io-client": "^1.4.32",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.2",
    "prettier": "2.0.4"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "prettier": {
    "parser": "typescript",
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
